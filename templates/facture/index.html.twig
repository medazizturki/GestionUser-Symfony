{% extends 'back.html.twig' %}

{% block title %}Facture {% endblock %}

{% block body %}

    <h1>Facture </h1>
        <div class="row g-4">
    <div class="col-md-12 ">
       <div class="bg-light rounded h-100 ">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NbScience</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.nbScience }}</td>
                <td>{{ facture.typeDePaiement }}</td>
                <td>
                    <a href="{{ path('app_facture_show', {'id': facture.id}) }}" class="btn btn-square btn-outline-success m-2"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('app_facture_edit', {'id': facture.id}) }}"  class="btn btn-square btn-outline-primary m-2" ><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
    </div>
    </div>

    <a href="{{ path('app_facture_new') }}" class="btn btn-success rounded-pill m-2">Ajouter</a>
{% endblock %}
