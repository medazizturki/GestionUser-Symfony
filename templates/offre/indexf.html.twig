    {% if isPaginated is defined and isPaginated %}
        <div class="row mt-2">
            <nav aria-label="col Page navigation example" >
                <ul class="pagination" >
                    {% if page != 1 %}
                        <li class="page-item" >
                            <a
                                    class="page-link"
                                    href="{{ path('app_offre_indexf', {page: page - 1, nbre: nbre}) }}"
                         style="color:white ; background-color: #2f89fc; margin-left:20px;"  >
                                Précédent
                            </a></li>
                    {% endif %}
                    {% for i in range(1, nbrePage) %}
                        <li class="page-item">
                            <a class="page-link"
                               href="{{ path('app_offre_indexf', {page: i, nbre: nbre}) }}"
                          style="color:white ; background-color: #2f89fc;"  >{{ i }}
                            </a>
                        </li>
                    {% endfor %}
                    {% if page != nbrePage %}
                        <li class="page-item">
                            <a
                                    class="page-link"
                                    href="{{ path('app_offre_indexf', {page: page + 1, nbre: nbre}) }}"
                          style="color:white ; background-color: #2f89fc;"  >Suivant</a>
                        </li>
                    {% endif %}
                     {% endif %}

