{% extends 'back.html.twig' %}

{% block title %}Participation{% endblock %}

{% block body %}

    <a href="{{ path('app_participation_index') }}" class="btn btn-info rounded-pill m-2" ><i class="fa fa-arrow-left" ></i></a>
    <h1>Participation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id Participation</th>
                <td>{{ participation.id }}</td>
            </tr>
            <tr>
                <th>Nom Evenement</th>
                <td>{{ participation.Evenement }}</td>
            </tr>
            <tr>
                <th>Nom User</th>
                <td>{{ participation.User }}</td>
            </tr>
            <tr>
                <th>DateParticipation</th>
                <td>{{ participation.dateParticipation ? participation.dateParticipation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DescriptionParticipation</th>
                <td>{{ participation.descriptionParticipation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_participation_edit', {'id': participation.id}) }}"class="btn btn-info rounded-pill m-2" ><i class="fas fa-edit"></i></a>

    {{ include('participation/_delete_form.html.twig') }}
{% endblock %}
