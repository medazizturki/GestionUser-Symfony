{% extends 'back.html.twig' %}

{% block title %}Participation index{% endblock %}

{% block body %}
    <h1>Participation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom Evenement</th>
                <th>Email User</th>
                <th>DateParticipation</th>
                <th>DescriptionParticipation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participation in participations %}
            <tr>
                <td>{{ participation.id }}</td>
                <td>{{ participation.Evenement }}</td>
                {#<td>{{ participation.User }}</td>#}
                <td>{{ participation.dateParticipation ? participation.dateParticipation|date('Y-m-d') : '' }}</td>
                <td>{{ participation.descriptionParticipation }}</td>
                <td>
                    <a href="{{ path('app_participation_show', {'id': participation.id}) }}"class="btn btn-square btn-secondary m-2"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    <a href="{{ path('app_participation_edit', {'id': participation.id}) }}"class="btn btn-info rounded-pill m-2" ><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('app_participation_newback') }}"class="btn btn-primary px-3 py-1">Ajouter Nouveau</a>
{% endblock %}
